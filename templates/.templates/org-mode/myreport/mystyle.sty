\newtheoremstyle{mydefinition}% name of the style to be used
{1em}% measure of space to leave above the theorem. E.g.: 3pt
{1em}% measure of space to leave below the theorem. E.g.: 3pt
{\em}% name of font to use in the body of the theorem
{}% measure of space to indent
{\bf}% name of head font
{. ---}% punctuation between head and body
{ }% space after theorem head; " " = normal interword space
{\thmname{#1}\thmnumber{ #2}\thmnote{ (#3)}}% Manually specify head

\newtheoremstyle{myremark}% name of the style to be used
{}% measure of space to leave above the theorem. E.g.: 3pt
{}% measure of space to leave below the theorem. E.g.: 3pt
{}% name of font to use in the body of the theorem
{1em}% measure of space to indent
{\em}% name of head font
{.}% punctuation between head and body
{ }% space after theorem head; " " = normal interword space
{\thmname{#1}\thmnumber{ #2}\thmnote{ (#3)}}% Manually specify head

\newtheoremstyle{mynotation}% name of the style to be used
{1em}% measure of space to leave above the theorem. E.g.: 3pt
{1em}% measure of space to leave below the theorem. E.g.: 3pt
{}% name of font to use in the body of the theorem
{}% measure of space to indent
{\bf}% name of head font
