! URxvt.background: rgba:5555/5555/5555/aaaa
! see https://superuser.com/questions/1247281/how-to-configure-rxvt-unicode-to-behave-similar-to-gnome-terminal-or-others-f

URxvt.font: xft:Monospace-12
URxvt.perl-ext-common:  default,matcher,selection-to-clipboard,font-size,new-window
URxvt.url-launcher:     firefox
URxvt.matcher.button:   3
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0
URxvt.secondaryWheel: 1
URxvt.cursorColor: rgb:cc/cc/cc
URxvt*foreground: rgb:ff/ff/f
! URxvt.shading: 60
! URxvt.background: #232729
! URxvt.transparent: true
urxvt*depth: 32
URxvt.background: rgba:2300/2700/2900/a800
URxvt.scrollBar:  false
urxvt.colorBD:           #ffffff
urxvt.colorIT:           #bbbbbb
urxvt.colorUL:           #999999
urxvt.underlineColor:    #999999
URxvt*letterSpace: -1

! Rebind Ctrl + Shift + C/V
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

! Removing anoying iso blablabla
URxvt.iso14755: false
URxvt.iso14755_52: false

! scale fonts
URxvt.keysym.C-S-plus: font-size:increase
URxvt.keysym.C-KP_Add: font-size:increase
URxvt.keysym.C-S-underscore: font-size:decrease
URxvt.keysym.C-KP_Subtract: font-size:decrease
URxvt.keysym.C-0: font-size:reset
URxvt.keysym.C-KP_0: font-size:reset


! Scroll locking
URxvt.scrollTtyOutput:      false
URxvt.scrollWithBuffer:     true
URxvt.scrollTtyKeypress:    true

URxvt.keysym.Home: \033[H
URxvt.keysym.End:  \033[F

! match vte/xterm
URxvt.keysym.Control-Up:    \033[1;5A
URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

! New window
URxvt.keysym.C-N: perl:new-window

! clear the scrollback
! URxvt.keysym.Control-l: command:\033c


